<Page x:Class="Library_System.Book"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
      xmlns:local="clr-namespace:Library_System"
      mc:Ignorable="d" 
      d:DesignHeight="475" d:DesignWidth="810"
      Title="Book">

    <Grid>

        <DockPanel HorizontalAlignment="Left" Height="50" LastChildFill="False" VerticalAlignment="Bottom" Width="810" Margin="0.5,0,0.5,424.667" Background="#FF418D86" Grid.ColumnSpan="2"/>
        <dragablz:TabablzControl Height="475" VerticalAlignment="Top" Width="810" Margin="0,0,0,-0.333" Grid.ColumnSpan="2" >
            <TabItem Header="Add" Foreground="White" Background="White" >
                <Grid Background="#FFE5E5E5" Margin="-3,-2,-2,-2.333">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="94*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Accession No." HorizontalAlignment="Left" Height="29" Margin="57,47,0,0" VerticalAlignment="Top" Width="90"/>
                    <Label Content="ISBN" HorizontalAlignment="Left" Height="29" Margin="57,81,0,0" VerticalAlignment="Top" Width="90"/>
                    <Label Content="Title" HorizontalAlignment="Left" Height="29" Margin="57,115,0,0" VerticalAlignment="Top" Width="90"/>
                    <Label Content="Class No." Height="29" Margin="57,147,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90"/>
                    <Label Content="Letter" HorizontalAlignment="Left" Height="29" Margin="56,174,0,0" VerticalAlignment="Top" Width="90"/>
                    <Label Content="Author" HorizontalAlignment="Left" Height="29" Margin="56,205,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.498,-0.155"/>
                    <Label Content="Reference" HorizontalAlignment="Left" Margin="56,242,0,0" VerticalAlignment="Top" Width="90" Height="26"/>
                    <TextBox x:Name="txt_accno_a" HorizontalAlignment="Left" Height="26" Margin="68.667,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Grid.Column="1"/>
                    <TextBox x:Name="txt_isbn_a" HorizontalAlignment="Left" Height="26" Margin="68.667,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Grid.Column="1"/>
                    <TextBox x:Name="txt_title_a" HorizontalAlignment="Left" Height="26" Margin="68.667,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" Grid.Column="1"/>
                    <Button x:Name="btn_save_a" Content="Save" HorizontalAlignment="Left" Margin="68.667,335,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" RenderTransformOrigin="0.496,-0.335" Foreground="White" FontWeight="Bold" Height="27" Style="{StaticResource Button}" Click="btn_save_a_Click"/>

                    <TextBox x:Name="txt_classno_a" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="68.667,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="txt_author_a" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="68.667,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196"/>
                    <ComboBox x:Name="cmb_reference_a" Grid.Column="1" HorizontalAlignment="Left" Margin="68.667,242,0,0" VerticalAlignment="Top" Width="74" Height="26">
                        <ComboBoxItem Content="PR" HorizontalAlignment="Left" />
                        <ComboBoxItem Content="SR" HorizontalAlignment="Left" />
                        <ComboBoxItem Content="L" HorizontalAlignment="Left" />
                    </ComboBox>
                    <ComboBox x:Name="cmb_Letter_a" Grid.Column="1" HorizontalAlignment="Left" Margin="68.667,177,0,0" VerticalAlignment="Top" Width="43" RenderTransformOrigin="0.298,-0.083" Height="26" MaxDropDownHeight="103">
